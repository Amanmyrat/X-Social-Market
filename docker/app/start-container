#!/usr/bin/env bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

# Fix permissions on application directory
chown -R $WWWUSER:$WWWUSER /var/www/html 2>/dev/null || true

# Always run composer install to ensure dependencies are properly installed in the container
echo "Installing Composer dependencies..."
gosu $WWWUSER composer install --no-interaction --prefer-dist --working-dir=/var/www/html
if [ $? -ne 0 ]; then
    echo "ERROR: Composer install failed!"
    exit 1
fi

# Install Node dependencies
echo "Installing Node dependencies..."
if [ -f /var/www/html/package-lock.json ]; then
    echo "Using npm ci with package-lock.json..."
    gosu $WWWUSER npm ci --prefix=/var/www/html
else
    echo "Using npm install (package-lock.json not found)..."
    gosu $WWWUSER npm install --prefix=/var/www/html
fi
if [ $? -ne 0 ]; then
    echo "ERROR: npm install failed!"
    exit 1
fi

# Run npm watch in background
echo "Starting asset watcher..."
gosu $WWWUSER npm run watch --prefix=/var/www/html &

if [ $# -gt 0 ]; then
    exec gosu $WWWUSER "$@"
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
